@inject RTI.UI.InvoiceListRm _rm
@{
    var companyName = "Real-time Invoicing, Ltd";

    string isHighlighted(string controllerName) {
        var req = Context.Request;
        var vals = req.RouteValues;
        var c = vals["controller"].ToString();
        return c.Equals(controllerName, StringComparison.OrdinalIgnoreCase)
            ? "active fw-bold"
            : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @companyName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RTI.UI.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("head", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@companyName</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @isHighlighted("Home")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @isHighlighted("EventStore")" asp-area="" asp-controller="EventStore" asp-action="Index">EventStore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @isHighlighted("Sql")" asp-area="" asp-controller="Sql" asp-action="Index">SQL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @isHighlighted("MongoDB")" asp-area="" asp-controller="MongoDB" asp-action="Index">MongoDB</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @isHighlighted("Redis")" asp-area="" asp-controller="Redis" asp-action="Index">Redis</a>
                        </li>
                    </ul>
                </div>
                <div>
                    EventStore Stream Position: @(_rm.Position ?? 0)
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - @companyName
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
